{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "lib",
    "incremental": true,
    "allowJs": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
  },
  "exclude": ["node_modules", "lib", "eslint.config.js"]
}
