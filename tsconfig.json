{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
  },
  "exclude": ["node_modules", "dist", "eslint.config.js"]
}
